<div class="container">
  <div class="row">
    <h1><%= link_to 'Blog', root_path %></h1>
    <div class="col-8 offset-4">
      <h1>Posts von <%=@author.name %></h1>
      <br>
      <% @posts.each do |post|%>
          <h2><%= link_to post.title, post_path(post) %></h2>
          <p><%= post.content %></p>
          <small><%= post.created_at.strftime("geschrieben am %d.%m.%Y") %></small>
          <br>
          <br>
      <% end %>
    </div>
  </div>
</div>
