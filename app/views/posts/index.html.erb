<div class="container">
  <div class="row">
    <h1>Blog</h1>
    <div class="col-8 offset-4">
      <% Post.all.each do |post|%>
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <small><%= post.created_at.strftime("geschrieben am %d.%m.%Y") %></small>
      <% end %>
    </div>
  </div>
</div>

